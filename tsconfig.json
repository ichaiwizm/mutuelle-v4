{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "components/*": ["src/renderer/components/*"],
        "ui/*": ["src/renderer/components/ui/*"],
        "lib/*": ["src/renderer/lib/*"],
        "hooks/*": ["src/renderer/hooks/*"],
        "utils/*": ["src/renderer/lib/utils/*"]
      },
      "types": ["node", "vitest/globals"]
    }
  }
  